    <link href="~/css/font-open-sans.css" rel="stylesheet" />

</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                @*<div class="login-logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>*@
                <br />
                <br />
                <br />
                <br />
                <div class="login-form">
                    <form asp-action="Autenticar">
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="USU_EMAIL" type="email" class="form-control" placeholder="Email">
                            <span class="text-danger">@ViewBag.ErrorEmail</span>
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input asp-for="USU_SENHA" type="password" class="form-control" placeholder="Senha">
                            <span class="text-danger">@ViewBag.ErrorSenha</span>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                            <label class="pull-right">
                                <a href="#">Forgotten Password?</a>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                        <span class="text-danger">@ViewBag.ErrorLogin</span>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    @*<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>*@
    <script src="~/lib/jquery/jquery.min.js"></script>

